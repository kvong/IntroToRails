<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @book.name %>
</p>

<h2>Comments</h2>
<% @book.comments.each do |comment| %>
    <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
    </p>
    <p>
        <strong>Comment:</strong>
        <%= comment.body%>
    </p>
<% end %>

<h2>Add a Comment:</h2>
<%= form_for([@book, @book.comments.build]) do |f| %>
    <p>
        <%= f.label :body%><br/>
        <%= f.text_area:body%><br/>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
