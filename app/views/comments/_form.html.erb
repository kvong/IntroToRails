<%= form_with(model: [ @article, @article.comments.build ],
             local: true) do |form| %>
    <p>
        <%= form.label :commenter %>
        <%= form.text_field :commenter %>
    </p>

    <p>
        <%= form.label :body %>
        <%= form.text_area :body, :id => "message_area", :cols => 50, :rows => 5 %>
    </p>

    <p>
    <%= form.submit 'Add comment', :class => 'button' %>
    </p>
<% end %>

