<h1>Articles</h1>

<%= link_to "Home", welcome_index_path %>
<table>
    <thead class="table100-head">
        <th class="column1">Title</th>
        <th class="column2">Created At</th>
        <th class="column3"></th>
        <th class="column4"></th>
        <th class="column5"></th>
    </thead>
    <% @articles.each do |article| %>
        <tr>
            <td class="column1"><%= article.title %></td>
            <td class="column2"><%= article.created_at %></td>
            <td class="column3"><%= link_to 'Show', article_path(article) %></td>
            <td class="column4"><%= link_to 'Edit', edit_article_path(article) %></td>
            <td class="column5"><%= link_to 'Delete', article_path(article), 
                method: :delete, 
                data: { confirm: 'Are you sure?
                        ' }%></td>
        </tr>
    <% end %>
</table>
<%= link_to "Write a new article", new_article_path, class: 'new-article'%>

